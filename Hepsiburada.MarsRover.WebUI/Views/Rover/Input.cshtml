@model Hepsiburada.MarsRover.Entities.Entity.InputModel

<form asp-action="Input" asp-controller="Rover" asp-antiforgery="true" class="form-horizontal">

    <h3>Plateau Information</h3>
    <div class="form-group">
        <label asp-for="Plateau.PlateauPosition.X" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="Plateau.PlateauPosition.X" class="form-control" min="1" max="100" required />
            <span asp-validation-for="Plateau.PlateauPosition.X"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Plateau.PlateauPosition.Y" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="Plateau.PlateauPosition.Y" class="form-control" min="1" max="100" required />
            <span asp-validation-for="Plateau.PlateauPosition.Y"></span>
        </div>
    </div>
    <div class="clearfix"></div>

    <h3>
        Rover Information
        <span><input type="button" value="Add New Rover" id="btnAddNewRover" class="btn btn-sm btn-info" /></span>
    </h3>

    <div id="dvRoverList">
        @Html.Partial("_Rover", Model)
    </div>

    <br />
    <input type="submit" value="Submit" class="btn btn-primary" />
</form>

<br />

<form asp-action="InputValues" asp-controller="Rover" asp-antiforgery="true" class="form-horizontal">
    <input type="submit" value="Show Case Study" class="btn btn-primary" />
</form>

<div class="clearfix"></div>

@Html.Partial("_Result", Model)
