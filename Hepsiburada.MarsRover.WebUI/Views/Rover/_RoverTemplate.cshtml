@model Hepsiburada.MarsRover.Entities.Entity.InputModel

<div id="dv-RoverList[0]" class="dv-rover">
    <div class="form-group">
        <label asp-for="RoverList[0].RoverPosition.X" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="RoverList[0].RoverPosition.X" class="form-control" min="1" max="100" required />
            <span asp-validation-for="RoverList[0].RoverPosition.X"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoverList[0].RoverPosition.Y" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="RoverList[0].RoverPosition.Y" class="form-control" min="1" max="100" required />
            <span asp-validation-for="RoverList[0].RoverPosition.Y"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoverList[0].RoverPosition.CurrentDirectionType" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <select asp-for="RoverList[0].RoverPosition.CurrentDirectionType" class="form-control" required>
                <option value="North">North</option>
                <option value="East">East</option>
                <option value="South">South</option>
                <option value="West">West</option>
            </select>
            <span asp-validation-for="RoverList[0].RoverPosition.CurrentDirectionType"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoverList[0].CommandParameters" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="RoverList[0].CommandParameters" class="form-control" required />
            <span asp-validation-for="RoverList[0].CommandParameters"></span>
        </div>
        <div class="col-sm-3">
            <select name="RoverList[0].DirectionType" class="form-control">
                <option value="M">Move Forward</option>
                <option value="L">Rotate Left</option>
                <option value="R">Rotate Right</option>
            </select>
        </div>
        <div class="col-sm-3">
            <span><input type="button" value="Add New Command" name="RoverList[0]" class="btn btn-sm btn-info btn-add-new-command" /></span>
        </div>
    </div>
</div>

<hr />